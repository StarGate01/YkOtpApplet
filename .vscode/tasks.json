{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build YkHMACApplet",
            "type": "shell",
            "command": "ant dist",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Clean YkHMACApplet",
            "type": "shell",
            "command": "ant clean",
            "problemMatcher": []
        },
        {
            "label": "Build jcardsim",
            "type": "shell",
            "command": "mvn initialize && mvn clean install",
            "options": {
                "env": {
                    "JC_CLASSIC_HOME": "${workspaceFolder}/sdks/jc305u3_kit/"
                },
                "cwd": "${workspaceFolder}/tools/jcardsim"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Clean jcardsim",
            "type": "shell",
            "command": "rm -rf target",
            "options": {
                "cwd": "${workspaceFolder}/tools/jcardsim"
            },
            "problemMatcher": []
        },
        {
            "label": "Build yktool",
            "type": "shell",
            "command": "make yktool.jar",
            "options": {
                "cwd": "${workspaceFolder}/tools/yktool"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Clean yktool",
            "type": "shell",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceFolder}/tools/yktool"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "List Connected Yubikeys (yktool)",
            "type": "shell",
            "command": "java -jar yktool.jar list",
            "options": {
                "cwd": "${workspaceFolder}/tools/yktool"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Install Applet (fdsm)",
            "type": "shell",
            "command": "java -jar fdsm.jar --install ${workspaceFolder}/target/YkHMACApplet.cap",
            "problemMatcher": []
        },
        {
            "label": "List Installed Applets (fdsm)",
            "type": "shell",
            "command": "java -jar fdsm.jar --card-info && java -jar fdsm.jar --card-apps",
            "problemMatcher": []
        },
        {
            "label": "Program Sample HMAC To Yubikey (yktool)",
            "type": "shell",
            "command": "echo 'b6e3f555562c894b7af13b1db37f28deff3ea89b' | java -jar yktool.jar program hmac 1 -x -X",
            "options": {
                "cwd": "${workspaceFolder}/tools/yktool"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Perform Sample Challenge With Yubikey (yktool)",
            "type": "shell",
            "command": "printf 'aaaa' | java -jar yktool.jar hmac 1 -x",
            "options": {
                "cwd": "${workspaceFolder}/tools/yktool"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Test Applet ADPU Sequence (jcardsim)",
            "type": "shell",
            "command": "java -cp tools/jcardsim/target/jcardsim-3.0.5-SNAPSHOT.jar:./target com.licel.jcardsim.utils.APDUScriptTool test/jcardsim.cfg test/apdu.script",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
        },
        {
            "label": "Emulate Applet PC/SC (jcardsim + vsmartcard)",
            "type": "shell",
            "command": "java -cp tools/jcardsim/target/jcardsim-3.0.5-SNAPSHOT.jar:./target com.licel.jcardsim.remote.VSmartCard test/jcardsim.cfg",
            "group": "test",
            "problemMatcher": [],
        },
        {
            "label": "Send Boot Applet ADPU (opensc-tool)",
            "type": "shell",
            "command": "opensc-tool -r 'Virtual PCD 00 00' -s '80 b8 00 00 0e 07 a0 00 00 05 27 20 01 05 00 00 02 F F 7f'",
            "group": "test",
            "problemMatcher": [],
        },
    ]
}